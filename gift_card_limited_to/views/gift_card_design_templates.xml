<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="page_gift_card_view_form" model="ir.ui.view">
        <field name="name">page.gift.card.form Website</field>
        <field name="model">gift.card</field>
        <field name="inherit_id" ref="gift_card.gift_card_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="after">
                <group string="Limited usage">
                    <field name="limited" widget="checkbox"/>
                    <field name="limited_to" widget="radio" attrs="{'invisible': [('limited', '!=', True)]}"/>
                    <field name="limited_to_product_id"
                           attrs="{'invisible': ['|', ('limited', '=', False), ('limited_to', '!=', 'product')]}"/>
                    <field name="limited_to_category_id"
                           attrs="{'invisible': ['|', ('limited', '=', False), ('limited_to', '!=', 'category')]}"/>
                    <field name="limited_to_product_list" widget="many2many_tags"
                           attrs="{'invisible': ['|', ('limited', '=', False), ('limited_to', '!=', 'product_list')]}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>

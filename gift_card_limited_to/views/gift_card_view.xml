<?xml version="1.0"?>
<odoo>
    <record id="gift_card_view_form" model="ir.ui.view">
        <field name="name">product.template.view_form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_general']" position="inside">
                    <field name="limited" widget="checkbox"/>
                    <field name="limited_to" widget="radio" attrs="{'invisible': [('limited', '!=', True)]}"/>
                    <field name="limited_to_product_id" attrs="{'invisible': ['|', ('limited', '=', False), ('limited_to', '!=', 'product')]}"/>
                    <field name="limited_to_category_id" attrs="{'invisible': ['|', ('limited', '=', False), ('limited_to', '!=', 'category')]}"/>
                    <field name="limited_to_product_list" widget="many2many_tags" attrs="{'invisible': ['|', ('limited', '=', False), ('limited_to', '!=', 'product_list')]}"/>
            </xpath>
        </field>      
    </record>
</odoo>
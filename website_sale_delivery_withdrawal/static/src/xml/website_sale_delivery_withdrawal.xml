<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="website_sale_delivery_withdrawal">
         <div class="modal fade" id="modal_withdrawal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="h5 modal-title">Choose your withdrawal Point</div>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span>Ã—</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="w-100" id="o_zone_widget">
                            <div class="WP_Results">
                                <div class="WP_RList">
                                    <div id="addressCard" class="card mb-2 addressCard d-none" style="">

<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="priority">16</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='properties']" position="before">
                <group name="gift_card_expired">
                    <field name="expired_profit_account" attrs="{'required': [('detailed_type', '==', 'gift')]}"/>
                    <field name="expired_journal" attrs="{'required': [('detailed_type', '==', 'gift')]}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
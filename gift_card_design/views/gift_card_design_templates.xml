<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="page_gift_card_template" model="ir.ui.view">
        <field name="name">product.page_gift_card</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Gift Card" name="gift_card" attrs="{'invisible':[('detailed_type', '!=', 'gift')]}">
                    <group name="gift_card" string="Gift Card Customisation">
                        <group>
                            <field name="gift_card_header" widget='image'/>
                            <field name="gift_card_description_image" widget='image'/>
                        </group>
                        <group>
                            <field name="gift_card_title"/>
                            <label for="title_text_color" string="Title palette"/>
                            <div class="o_document_layout_colors d-inline-flex">
                                <field nolabel="1" name="title_text_color" widget="color"/>
                                <field nolabel="1" name="title_background_color" widget="color"/>
                            </div>
                            <field name="gift_card_balance" widget="boolean"/>
                            <label for="balance_text_color" string="Balance palette"/>
                            <div class="o_document_layout_colors d-inline-flex">
                                <field nolabel="1" name="balance_text_color" widget="color"/>
                                <field nolabel="1" name="balance_background_color" widget="color"/>
                            </div>
                        </group>
                    </group>
                    <group>
                        <group string="Gift Card Description">
                            <field name="gift_card_description" widget='html' options="{'codeview':true}"/>
                            <label for="description_text_color" string="Description palette"/>
                            <div class="o_document_layout_colors d-inline-flex">
                                <field nolabel="1" name="description_text_color" widget="color"/>
                                <field nolabel="1" name="description_background_color" widget="color"/>
                                <field nolabel="1" name="code_background_color" widget="color"/>
                            </div>
                        </group>
                        <group string="Gift Card Condition">
                            <field name="gift_card_condition" widget='html' options="{'codeview':true}"/>
                            <label for="condition_text_color" string="Condition palette"/>
                            <div class="o_document_layout_colors d-inline-flex">
                                <field nolabel="1" name="condition_text_color" widget="color"/>
                                <field nolabel="1" name="condition_background_color" widget="color"/>
                            </div>
                        </group>
                    </group>
                    <group>
                        <field name="validity_select"/>
                        <field name="validity_date"
                               attrs="{'invisible':[('validity_select', '!=', 'date')], 'required':[('validity_select', '=', 'date')]}"/>
                        <field name="validity_duration"
                               attrs="{'invisible':[('validity_select', '!=', 'duration')], 'required':[('validity_select', '=', 'duration')]}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>


    <record id="page_gift_card_view_form" model="ir.ui.view">
        <field name="name">page.gift.card.form Website</field>
        <field name="model">gift.card</field>
        <field name="inherit_id" ref="gift_card.gift_card_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='gift_card']" position="inside">
                <field name="product_id" domain="[('detailed_type','=', 'gift')]"/>
                <field name="customer_id"/>
            </xpath>
        </field>
    </record>
</odoo>

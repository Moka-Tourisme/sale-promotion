<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="page_gift_card_template" model="ir.ui.view">
        <field name="name">product.page_gift_card</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Gift Card" name="gift_card" attrs="{'invisible':[('detailed_type', '!=', 'gift')]}">
                    <group name="gift_card" string="Gift Card Infos">
                        <group>
                            <field name="gift_card_header" widget='image'/>
                        </group>
                        <group>
                            <field name="gift_card_title" widget=''/>
                            <label for="gift_card_balance"/>
                            <div class="o_row" name="Show Balance">
                                <field name="gift_card_balance" widget="boolean"/>
                            </div>
                        </group>
                    </group>
                    <group>
                        <label for="gift_card_description"/>
                        <div class="o_row" name="gift_card_description">
                            <field name="gift_card_description" widget='html' options="{'codeview':true}"/>
                        </div>
                        <label for="gift_card_condition"/>
                        <div class="o_row" name="gift_card_condition">
                            <field name="gift_card_condition" widget='html' options="{'codeview':true}"/>
                        </div>
                    </group>
                </page>
            </xpath>
        </field>
    </record>


    <record id="page_gift_card_view_form" model="ir.ui.view">
        <field name="name">page.gift.card.form Website</field>
        <field name="model">gift.card</field>
        <field name="inherit_id" ref="gift_card.gift_card_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='gift_card']" position="inside">
                <field name="product_template_id" domain="[('detailed_type','=', 'gift')]"/>
                <field name="customer_id"/>
            </xpath>
        </field>
    </record>
</odoo>

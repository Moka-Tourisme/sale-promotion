<?xml version="1.0" ?>
<odoo>
    <record id="mail_template_gift_card_custom" model="mail.template">
        <field name="name">Gift Card Custom: Send by Email</field>
        <field name="email_from">{{ (object.company_id.email_formatted or user.email_formatted) }}</field>
        <field name="model_id" ref="gift_card.model_gift_card"/>
        <field name="lang">${object.partner_id.lang}</field>
        <field name="subject">Your Gift Card</field>
        <field name="partner_to">{{ object.partner_id.id or object.buy_line_id.order_id.partner_id.id }}</field>
        <field name="body_html" type="html">
            <div>
                Dear <t t-out="object.buy_line_id.order_id.partner_id.name or ''">Oscar Morgan</t>,
                <br/>
                Thank you for your order.
                <br/>
                Here is your gift card.
                <br/>
                If you have any questions, please let us know.
                <br/>
                <br/>
                Thank you,
            </div>
        </field>
        <field name="report_template" ref="gift_card_design.gift_card_custom_report"/>
        <field name="report_name">Gift Card</field>
        <field name="auto_delete" eval="True"/>
    </record>
</odoo>
